
@{
    ViewBag.Title = "Generate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="row">

        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Genrate CheckedOut Truck Invoice</h4>
                    @using (Html.BeginForm("Generate", "Invoice", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Truck Capacity</label>                                    
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">                                    
                                    @Html.DropDownList("organizationId", (SelectList)ViewBag.OrganizationList, "-- Select--", new { @class = "form-control", @id = "organizationId" })
                                </div>
                            </div>
                            <div class="col-md-3">                                                    
                                    <div class="table-butn">
                                        <button  type="submit" name="Command" class="btn btn-outline-warning btn-warning" id="search" value="search">
                                            <i class="ti-search text-info"> Search</i>
                                        </button>
                                    </div>
                               
                            </div>
                        </div>
                    }
                    <br />
                    <hr />
                    <br />

                    @using (Html.BeginForm("GenerateInvoice", "Invoice", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="table-responsive">
                            @Html.Hidden("organizationId")
                            <table id="responsive-data-table" class="table  table table-striped table-bordered table-sm tbl-hd" style="width:100%">
                                <thead>
                                    <tr role="row">
                                        <th scope="col" style="display:none;">TruckDetailsId</th>
                                        <th scope="col" style="width: 100px;">
                                            <label class="ms-checkbox-wrap">
                                                <input type="checkbox" value="" id="TruckDetailsId">
                                                <i class="ms-checkbox-check"></i>
                                            </label> Action
                                        </th>
                                        <th scope="col">Truck No</th>
                                        <th scope="col">Expected Arrival Date</th>
                                        <th scope="col">Expected Departure Date</th>
                                        <th scope="col">Truck Capacity</th>
                                        @*<th>Location/Destination</th>*@
                                        <th scope="col">Actual Arrival Date</th>
                                        <th scope="col">Actual Departure Date</th>
                                        <th scope="col">Transporter Name</th>
                                        <th scope="col">Transporter Number</th>
                                        <th scope="col">Driver Name</th>
                                        <th scope="col">Driver Number</th>
                                        <th scope="col">Material Type</th>
                                        <th scope="col">Material Goods</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (ViewBag.TruckList != null)
                                    {
                                        foreach (var item in ViewBag.TruckList)
                                        {
                                            <tr role="row" class="odd">
                                                <td data-label="TruckDetailsId" style="display:none;">
                                                    @item.TruckDetailsId
                                                </td>
                                                <td data-label="TruckDetailsId">
                                                    <label class="ms-checkbox-wrap">
                                                        <input type="checkbox" id="TruckDetailsId" name="TruckDetailsId" value="@item.TruckDetailsId" class="custom-checkbox chkCheckBoxId">
                                                        <i class="ms-checkbox-check"></i>
                                                    </label>

                                                </td>
                                                <td data-label="TruckNo">@item.TruckNo</td>
                                                <td data-label="ExpectedArrivalDate">@item.ExpectedArrivalDate</td>
                                                <td data-label="ExpectedDepatureDate">@item.ExpectedDepatureDate</td>
                                                <td data-label="TruckCapacity">@item.TruckCapacity </td>
                                                @*<td>@item</td>*@
                                                <td data-label="ActualArrivalDate">@item.ActualArrivalDate</td>
                                                <td data-label="ActualDepartureDate">@item.ActualDepatureDate</td>
                                                <td data-label="TransportName">@item.TransportName</td>
                                                <td data-label="TransportNo">@item.TransportNo</td>
                                                <td data-label="DriverName">@item.DriverName</td>
                                                <td data-label="DriverNo">@item.DriverNo</td>
                                                <td data-label="MaterialType">@item.MaterialType</td>
                                                <td data-label="MaterialGoods">@item.MaterialGoods</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>

                                    <tr>
                                        <th colspan="12">
                                            <div class="table-butn">
                                                <button style="margin-top:0px;" type="submit" name="Command" class="btn btn-outline-success btn-success" data-swal="multi-step" id="delete" value="delete">
                                                    <i class="ti-book text-info"> Generate Invoice</i>
                                                </button>
                                            </div>
                                        </th>
                                    </tr>

                                </tfoot>

                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
